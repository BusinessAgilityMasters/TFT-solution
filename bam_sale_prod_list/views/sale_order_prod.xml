<odoo>
    <record id="sale_order_prod_tree_view" model="ir.ui.view">
        <field name="name">bam_sale_prod_list.sale_order_prod_tree</field>
        <field name="model">bam_sale_order_prod_list</field>
        <field name="arch" type="xml">
            <tree  editable="bottom" >
                <field name="sequence" widget="handle" />
                <field name="level"  />
                <field name="parent_product_id"  />
                <field name="product_id"    />
                <field name="qty"   />
                <field name="name"  />
                <field name="unit_price"  />
                <field name="line_price"  sum="total line price" />
                <button name="update_sol_qty" type="object" icon="fa-angle-double-right" help="Update Sub BOM Qty"/>
             </tree>
        </field>
    </record>
</odoo>